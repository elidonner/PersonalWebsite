<!-- MACRO TO BE USED FOR CREATING SLIDES ON PROJECT PAGES -->
{% macro slides(imgs) -%}

<div class="project-slideshow column padding-top-64">
    <div class="wrapper-center row" style="justify-content: space-evenly">
    <a class="prev" onclick="plusSlides(-1)">❮</a>
    <div class="slideshow-container round-xxlarge column">
        {% for img in imgs %}
        
        <div class="img-slides row">
            {% if img|length > 2 %}
            <div class="img-container embedded-video" onclick="lightbox_open({{img[2]}})">
                <img src="{{img[0]}}" />
                <div class="play-button">
                    <svg version="1.1" id="play" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" height="100px" width="100px"
                    viewBox="0 0 100 100" enable-background="new 0 0 100 100" xml:space="preserve">
                    <path class="stroke-solid" fill="none" stroke="white"  d="M49.9,2.5C23.6,2.8,2.1,24.4,2.5,50.4C2.9,76.5,24.7,98,50.3,97.5c26.4-0.6,47.4-21.8,47.2-47.7
                    C97.3,23.7,75.7,2.3,49.9,2.5"/>
                    <path class="stroke-dotted" fill="none" stroke="white"  d="M49.9,2.5C23.6,2.8,2.1,24.4,2.5,50.4C2.9,76.5,24.7,98,50.3,97.5c26.4-0.6,47.4-21.8,47.2-47.7
                    C97.3,23.7,75.7,2.3,49.9,2.5"/>
                    <path class="icon" fill="white" d="M38,69c-1,0.5-1.8,0-1.8-1.1V32.1c0-1.1,0.8-1.6,1.8-1.1l34,18c1,0.5,1,1.4,0,1.9L38,69z"/>
                    </svg>
                </div>
            </div>
            {% else %}
            <div class="img-container">
                <img src="{{img[0]}}" onclick="enlargeImage(this)" />
                <div class="video-popup">
                <div class="popup-img-container">
                    <img src="{{img[0]}}" />
                    <div class="close-btn" onclick="closeImage()">&times;</div>
                </div>            
                </div>
            </div>
            {% endif %}
            <h3 class="text xlarge">{{img[1]}}</h3> 
        </div>
        {% endfor %}
    </div>
    <a class="next" onclick="plusSlides(1)">❯</a>
    </div>
    <div class="dot-container padding-top-32">
    {% for i in range(1, imgs|length +1) %}
    <span class="dot" onclick="currentSlide({{i}})"></span>
    {% endfor %}
    </div>
</div>

{% endmacro %}

{% macro vimeoLightbox(id, vid) -%}
<div id="{{id}}" class="video-popup">
    <div class="video-container">
        <iframe src="{{vid}}" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen class="vimeo-video" title="{{id}}"></iframe>
        <div class="close-btn" onclick="lightbox_close()">&times;</div>
    </div>
</div>
{% endmacro %}